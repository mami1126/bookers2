<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
   <div claa="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
     <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control mb-3' %>

    <%= f.label :Opinion %>
    <%= f.text_area :body, class: 'form-control mb-3' %>

    <%= f.submit "Update Book", class: "btn btn-success" %>
    <% end %>
    
    <%= link_to "Show", book_path(@book) %>
     | 
    <a class="book" href="/books">Back</a>
    </div>
   </div>
  </div>
</main>





